pipeline {
    agent any
    
    stages {
        stage('Test') {
            steps {
                script {
                    dir('app/sample-app') {
                        sh '''
                            echo "Running Go tests..."
                            go test -v ./...
                            echo "✅ Tests passed!"
                        '''
                    }
                }
            }
        }
        
        stage('Build & Push') {
            steps {
                script {
                    dir('app/sample-app') {
                        sh '''
                            echo "Building Docker image..."
                            docker build -t deividsantos/sample-app:latest .
                            echo "Pushing to Docker Hub..."
                            docker push deividsantos/sample-app:latest
                            echo "✅ Image built and pushed!"
                        '''
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    sh '''
                        echo "Deploying to Kubernetes..."
                        kubectl apply -f app/sample-app/deployment.yaml
                        kubectl rollout restart deployment/sample-app -n apps
                        echo "✅ Deploy complete!"
                    '''
                }
            }
        }
    }
}