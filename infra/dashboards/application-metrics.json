{
  "id": null,
  "title": "Application Metrics",
  "tags": ["applications"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
      {
        "id": 1,
        "title": "Application Activity",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(promhttp_metric_handler_requests_total[5m])",
            "legendFormat": "Metrics endpoint requests/sec"
          },
          {
            "expr": "go_goroutines",
            "legendFormat": "Active goroutines"
          }
        ],
        "xAxis": {
          "show": true
        },
        "yAxes": [
          {
            "label": "requests/sec & count",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Memory & GC",
        "type": "graph",
        "targets": [
          {
            "expr": "go_memstats_alloc_bytes / 1024 / 1024",
            "legendFormat": "Memory allocated (MB)"
          },
          {
            "expr": "rate(go_gc_duration_seconds_count[5m]) * 60",
            "legendFormat": "GC events per minute"
          }
        ],
        "yAxes": [
          {
            "label": "MB & events/min",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Application Pod CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"applications\"}[5m]) * 100",
            "legendFormat": "{{pod}}"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Application Pod Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"applications\"} / 1024 / 1024",
            "legendFormat": "{{pod}}"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
